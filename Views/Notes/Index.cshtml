@model IEnumerable<MVC_f_Denis.Models.Notes>

@{
    ViewBag.Title = "Оценки к товарам";
}

<h2>Мои оценки к товарам</h2>

<p>
    @Html.ActionLink("Добавить новую оценку", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayName("ИД Пользователя")
        </th>
        <th>
            @Html.DisplayName("ИД Продукта")
        </th>
        <th>
            @Html.DisplayName("Оценка")
        </th>
        <th>
            @Html.DisplayName("Комментарий")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ID_user)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ID_product)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Note)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Comment)
        </td>
        <td>
            @Html.ActionLink("Изменить оценку", "Edit", new { id=item.ID }) |
            @Html.ActionLink("Подробнее", "Details", new { id=item.ID }) |
            @Html.ActionLink("Удалить оценку", "Delete", new { id=item.ID })
        </td>
    </tr>
}

</table>
